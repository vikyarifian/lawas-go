package components

templ HtmlSlider() {
    <div class="intro-slider-container mb-5">
        <div class="intro-slider owl-carousel owl-theme owl-nav-inside owl-light" data-toggle="owl" 
            data-owl-options='{
                "dots": true,
                "nav": false, 
                "responsive": {
                    "1200": {
                        "nav": true,
                        "dots": false
                    }
                }
            }'>
            <div class="intro-slide" style="background-image: url(assets/images/demos/demo-4/slider/slide-3.png);">
                <div class="container intro-content">
                    <div class="row justify-content-end">
                        <div class="col-auto col-sm-7 col-md-6 col-lg-5">
                            <h3 class="intro-subtitle text-third">Best Deals</h3><!-- End .h3 intro-subtitle -->
                            <h1 class="intro-title">Manchester United</h1>
                            <h1 class="intro-title">Treble Winners</h1><!-- End .intro-title -->

                            <div class="intro-price">
                                // <sup class="intro-old-price">$349,95</sup>
                                <span class="text-third">
                                    $190<sup></sup>
                                </span>
                            </div><!-- End .intro-price -->

                            <a href="category.html" class="btn btn-primary btn-round">
                                <span>Bid Now</span>
                                <i class="icon-long-arrow-right"></i>
                            </a>
                        </div><!-- End .col-lg-11 offset-lg-1 -->
                    </div><!-- End .row -->
                </div><!-- End .intro-content -->
            </div><!-- End .intro-slide -->

            <div class="intro-slide" style="background-image: url(assets/images/demos/demo-4/slider/slide-4.png);">
                <div class="container intro-content">
                    <div class="row justify-content-end">
                        <div class="col-auto col-sm-7 col-md-6 col-lg-5">
                            <h3 class="intro-subtitle text-primary">New Listing</h3><!-- End .h3 intro-subtitle -->
                            <h1 class="intro-title">Piaggio Vespa <br>1963 VBB</h1><!-- End .intro-title -->

                            <div class="intro-price">
                                // <sup>Today:</sup>
                                <span class="text-primary">
                                    $2<sup>.500K</sup>
                                </span>
                            </div><!-- End .intro-price -->

                            <a href="category.html" class="btn btn-primary btn-round">
                                <span>Bid Now</span>
                                <i class="icon-long-arrow-right"></i>
                            </a>
                        </div><!-- End .col-md-6 offset-md-6 -->
                    </div><!-- End .row -->
                </div><!-- End .intro-content -->
            </div><!-- End .intro-slide -->
        </div><!-- End .intro-slider owl-carousel owl-simple -->

        <span class="slider-loader"></span><!-- End .slider-loader -->
    </div><!-- End .intro-slider-container -->
}